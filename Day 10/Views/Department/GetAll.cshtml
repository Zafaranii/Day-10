@model List<Department>
    <a asp-action="New" asp-controller="Department" class="btn btn-outline-primary">New</a>
    <br />
    <br />

    <table class="table">
        <thead>
            <tr>

                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Manager</th>

            </tr>
        </thead>
        @foreach (var m in Model)
        {
            <tbody>
                <tr>
                    <td>@m.Id</td>
                    <td>@m.name</td>
                    <td>@m.Manager</td>
                    <td><a asp-controller="Department" asp-action="Details" asp-route-id="@m.Id" asp-route-name="@m.name" class="btn btn-outline-info">Details</a></td>
                    <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@m.Id" class="btn btn-outline-dark">Edit</a></td>
                    <td>
                        <form method="post" asp-controller="Department" asp-action="Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@m.Id" />
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this Department?');">
                                Delete
                            </button>
                        </form>
                    </td>
                    <td></td>
                </tr>

            </tbody>
        }
    </table>