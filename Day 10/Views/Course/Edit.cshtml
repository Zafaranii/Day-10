@model Course
@{

    SelectList deptOptions = new SelectList(ViewBag.depts, "Id", "name");

}
<form method="post" action="/Course/saveEdit">
    <div class="form-group">
        <label asp-for="name"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" style="color:rebeccapurple"></span>
    </div>
  
    <div class="form-group">
        <label asp-for="minDegree"></label>
        <input asp-for="minDegree" class="form-control" />
        <span asp-validation-for="minDegree" style="color:rebeccapurple"></span>

    </div>
  
    <div class="form-group">
        <label asp-for="Department"></label>
        <select name="dept_id" class="form-control" asp-items="deptOptions">
        </select>
        <span asp-validation-for="Department" style="color:rebeccapurple"></span>

    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
